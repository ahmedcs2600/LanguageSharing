<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LanguageSharing" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_f8f3ef</item>
        <item name="colorPrimaryVariant">@color/color_f8f3ef</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_78c9c5</item>
        <item name="colorSecondaryVariant">@color/color_78c9c5</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="actionBarTheme">@style/ToolbarStyle</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="TextStyleLargeBold">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleLargeRegular">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TextStyleMediumBold">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleMediumRegular">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextStyleSmallBold">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomLabelStyle" parent="TextStyleSmallBold">
       <item name="android:textColor">@color/black</item>
    </style>

    <style name="BottomLabelValueStyle" parent="TextStyleSmallBold">
        <item name="android:textColor">@color/color_90908f</item>
    </style>

</resources>